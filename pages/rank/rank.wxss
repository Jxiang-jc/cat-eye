.rank-item {
  box-sizing: border-box;
  display: flex;
  position: relative;
  height: 260rpx;
  width: 100%;
  padding: 20rpx;
  -webkit-justify-content: space-around;
  -ms-flex-pack: distribute;
  justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -moz-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}
.rank-item .image-box {
  width: 212rpx;
  height: 212rpx;
  border-radius: 10rpx;
  position: relative;
}
.rank-item .image-box image {
  width: 100%;
  height: 100%;
}
.rank-item .image-box .count {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  text-align: right;
  color: #fff;
  background: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
  padding: 5rpx 10rpx;
}
.rank-item .image-box:before,
.rank-item .image-box:after {
  content: "";
  display: block;
  position: absolute;
  width: 106px;
  height: 106px;
  border: 1px solid #bdbdbd;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
  background-color: #fff;
  bottom: 0;
  left: 0;
  z-index: -1;
}
.rank-item .image-box:after {
  bottom: 3px;
  left: 3px;
  z-index: -2;
}
.rank-item .sound-list {
  height: 100%;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-overflow: ellipsis;
}
.rank-item .sound-list text {
  overflow: hidden;
  height: 32rpx;
  font-size: 13px;
  color: #9e9e9e;
}
