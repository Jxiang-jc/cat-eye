.footer {
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  width: 100%;
  flex-direction: column;
  align-items: center;
  position: relative;
  height: 140rpx;
  padding: 20rpx 40rpx;
  color: #9e9e9e;
  font-size: 28rpx;
}
.footer .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-around;
  -ms-flex-pack: distribute;
  justify-content: space-around;
  width: 100%;
}
.footer .content view {
  align-items: flex-start;
  text-align: center;
  cursor: default;
  background: transparent;
  color: #9e9e9e;
  border: none;
  width: 60px;
}
.footer .content text:after {
  content: '';
  display: block;
  position: relative;
  background-size: 730rpx 678rpx;
  background-position: -498rpx -524rpx;
  height: 32rpx;
  width: 32rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons@2x.02953e71.png);
}
.footer .bottom {
  text-align: center;
  width: 100%;
  font-size: 24rpx;
}
